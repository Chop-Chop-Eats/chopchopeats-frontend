<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 特定域名配置 -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">dev-api.chopchopeats.org</domain>
        <domain includeSubdomains="true">api.chopchopeats.org</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">chop-chop-a6b1.s3.us-east-1.amazonaws.com</domain>
        <domain includeSubdomains="true">s3.us-east-1.amazonaws.com</domain>
        <domain includeSubdomains="true">amazonaws.com</domain>
    </domain-config>
    
    <!-- 默认配置 - 允许HTTPS和HTTP -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
</network-security-config>
